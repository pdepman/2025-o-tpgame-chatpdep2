import src.system.gameStatus.*
import src.levels.level01.*

describe "Test de estados del juego" {
  test "Se completa nivel actual y cambia a próximo nivel" {
    gameCurrentStatus.levelUp()

    assert.equals("level 02", gameCurrentStatus.currentLevel())
  }

